{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "jsx": "react-jsx",
    "rootDir": "api",
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}