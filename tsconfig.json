{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "rootDir": ".",
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src", "api", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}